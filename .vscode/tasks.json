{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Required Gems",
      "type": "shell",
      "command": "rm -f Gemfile.lock && bundle install",
      "isBackground": false,
      "problemMatcher": []
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "rails test",
      "problemMatcher": []
    },
    {
      "label": "Reset Database",
      "type": "shell",
      "command": "rails db:drop && rails db:create && rails db:migrate && rails db:seed",
      "isBackground": false,
      "problemMatcher": []
    },
    {
      "label": "Preview",
      "type": "shell",
      "isBackground": true,
      "command": ". './preview.sh'",
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Puma starting",
            "endsPattern": "\\* Listening on"
          }
        }
      ]
    }
  ]
}
